<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smoke"
    tools:context="partyyy.com.notadeveloper.app.partyyy.Sheesha">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/total"
        android:layout_alignParentTop="true">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/total"
        android:layout_toLeftOf="@+id/total"
        android:background="@color/tw__composer_black"
        android:text="Total: â‚¹"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/book1"
        android:layout_alignParentRight="true"
        android:background="@color/tw__composer_black"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30dp" />
    <Button
        android:id="@+id/book1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:filterTouchesWhenObscured="true"
        android:text="Order"
        android:theme="@style/AccentButton"/>


</RelativeLayout>
