<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"


        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        android:clickable="false"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        android:paddingBottom="20dp"


        android:id="@+id/cv">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/club"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Club Name"
            android:id="@+id/clubname"
            android:layout_below="@+id/iv"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />
            <ImageView
                android:id="@+id/locicon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@+id/iv"
                android:layout_alignTop="@+id/clubname"
                android:tint="#727272"
                android:layout_toLeftOf="@+id/loct"
                card_view:srcCompat="@drawable/ic_location_on_black_24dp"
                />
            <TextView
                android:id="@+id/loct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/locicon"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv"
                android:layout_marginLeft="3dp"
                android:gravity="bottom"
                android:text="Chennai, India"
                android:textColor="#727272"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>