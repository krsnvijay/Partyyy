<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/introimg"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_above="@+id/introtext2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/introtext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="Version:"
        android:textSize="@dimen/textHeading"
        />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/introtext2"
        android:layout_margin="10dp"
        android:background="@color/textColorPrimary"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/introtext3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="Not a Developer"

        android:textSize="@dimen/textHeading"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/introtext3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/image1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_person_black_24dp"
            />

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image1"
            android:layout_toRightOf="@+id/image1"
            android:fontFamily="sans-serif-thin"

            android:text="Chirag G Samtani"
            android:textSize="@dimen/textHeading"
            />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@id/image1"
            android:layout_margin="10dp"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_person_black_24dp"
            />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image2"
            android:layout_below="@id/image1"
            android:layout_toRightOf="@+id/image2"
            android:fontFamily="sans-serif-thin"

            android:text="Vijay Krishna"
            android:textSize="@dimen/textHeading"
            />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@id/image2"
            android:layout_margin="10dp"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_person_black_24dp"
            />

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image3"
            android:layout_below="@id/image2"
            android:layout_toRightOf="@+id/image2"
            android:fontFamily="sans-serif-thin"
            android:text="Tharun Prakash"
            android:textSize="@dimen/textHeading"
            />
    </RelativeLayout>
</RelativeLayout>
